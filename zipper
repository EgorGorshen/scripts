#!/bin/bash

# Перебираем все папки в текущей директории
for dir in ./*; do
  if [ -d "$dir" ]; then # Проверяем, является ли файл директорией
    # Получаем имя папки без пути
    dirname=$(basename "$dir")
    # Архивируем папку в формате zip
    zip -r "${dirname}.zip" "$dirname"
    # Проверяем, успешно ли завершилась команда zip
    if [ $? -eq 0 ]; then
      # Удаляем папку, если архивация прошла успешно
      rm -rf "$dirname"
      echo "Папка $dirname успешно архивирована и удалена."
    else
      echo "Ошибка при архивации папки $dirname."
    fi
  fi
done

